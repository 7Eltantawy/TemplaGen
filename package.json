{
  "name": "templagen",
  "displayName": "TemplaGen",
  "icon": "assets/icon.png",
  "description": "Configure once create everywhere.",
  "version": "0.0.1",
  "publisher": "7eltantawy",
  "author": {
    "name": "Hassan Eltantawy"
  },
  "homepage": "https://github.com/HasanEltantawy/TemplaGen/blob/main/README.md",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/HasanEltantawy/TemplaGen/issues",
    "email": "hasaneltantawy@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HasanEltantawy/TemplaGen"
  },
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.template-maker",
        "title": "TemplaGen | Template Maker",
        "shortTitle": "Template Maker",
        "icon": "assets/icon.png"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.template-maker",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "configuration": {
      "title": "TemplaGen",
      "properties": {
        "templagen.dirTemplates": {
          "type": "array",
          "default": [
            {
              "name": "Flutter Clean Code",
              "needSubDir": true,
              "dirs": {
                "data": [
                  "data_source",
                  "models",
                  "repository"
                ],
                "domain": [
                  "entities",
                  "use_cases",
                  "repository"
                ],
                "presentation": [
                  "components",
                  "controller",
                  "screens"
                ]
              }
            }
          ],
          "description": "Directories templates."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.76.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.2.3",
    "@types/lodash": "^4.14.121",
    "@types/mkdirp": "^0.5.2"
  },
  "dependencies": {
    "change-case": "^4.1.2",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.19",
    "mkdirp": "^0.5.1",
    "node-fetch": "^2.0.0",
    "semver": "^6.3.0"
  }
}
